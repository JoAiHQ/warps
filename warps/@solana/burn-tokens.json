{
  "protocol": "warp:3.0.0",
  "chain": "solana",
  "name": "Solana: Burn Tokens",
  "title": {
    "en": "Burn SPL Tokens",
    "de": "SPL-Token verbrennen"
  },
  "description": {
    "en": "Burn (destroy) SPL tokens from your token account using the Solana Token Program. Permanently removes tokens from circulation by reducing the supply.",
    "de": "Verbrenne (zerstoere) SPL-Token aus deinem Token-Konto mit dem Solana Token Program. Entfernt Token dauerhaft aus dem Umlauf durch Verringerung des Angebots."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Burn Tokens",
        "de": "Token verbrennen"
      },
      "address": "TokenkegQfeZyiNwAJbNbGKPFXCWuBvf9Ss623VQ5DA",
      "func": "burn",
      "abi": "{\"instructions\":{\"burn\":{\"discriminator\":[8],\"args\":[{\"name\":\"amount\",\"type\":\"u64\"}],\"accounts\":[{\"address\":\"{{USER_ATA:MINT_ADDRESS}}\",\"writable\":true,\"signer\":false},{\"address\":\"{{MINT_ADDRESS}}\",\"writable\":true,\"signer\":false},{\"address\":\"{{USER_WALLET}}\",\"writable\":false,\"signer\":true}]}}}",
      "inputs": [
        {
          "name": "Mint Address",
          "as": "MINT_ADDRESS",
          "type": "address",
          "position": "input:0",
          "source": "field",
          "required": true,
          "description": {
            "en": "The mint address of the token to burn.",
            "de": "Die Mint-Adresse des zu verbrennenden Tokens."
          }
        },
        {
          "name": "Amount",
          "type": "biguint",
          "position": "arg:0",
          "source": "field",
          "required": true,
          "min": 1,
          "description": {
            "en": "Amount of tokens to burn.",
            "de": "Menge der zu verbrennenden Token."
          }
        }
      ]
    }
  ],
  "messages": {
    "success": {
      "en": "Tokens burned successfully.",
      "de": "Token erfolgreich verbrannt."
    }
  },
  "defaultChain": "solana"
}
