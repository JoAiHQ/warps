{
  "protocol": "warp:3.0.0",
  "name": "Allowance: Manage Whitelist",
  "title": {
    "en": "Manage Destination Whitelist"
  },
  "description": {
    "en": "Add an allowed destination address to an allowance. When set, the agent can only spend to whitelisted addresses."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Add Destination"
      },
      "address": "INJECT:ALLOWANCE_SC",
      "func": "addAllowedDestination",
      "gasLimit": 5000000,
      "inputs": [
        {
          "name": "Blockchain",
          "as": "chain",
          "bot": "The blockchain network.",
          "type": "string",
          "position": "chain",
          "source": "field",
          "required": true
        },
        {
          "name": "Allowance ID",
          "as": "allowance_id",
          "description": {
            "en": "The ID of the allowance"
          },
          "type": "uint64",
          "position": "arg:1",
          "source": "field",
          "required": true
        },
        {
          "name": "Destination Address",
          "as": "destination",
          "description": {
            "en": "The address to whitelist"
          },
          "type": "address",
          "position": "arg:2",
          "source": "field",
          "required": true
        }
      ]
    }
  ],
  "messages": {
    "success": {
      "en": "Destination added to whitelist."
    }
  }
}
