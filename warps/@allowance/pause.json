{
  "protocol": "warp:3.0.0",
  "name": "Allowance: Pause",
  "title": {
    "en": "Pause Allowance"
  },
  "description": {
    "en": "Temporarily freeze an allowance to prevent agent spending. Funds remain in the contract."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Pause"
      },
      "address": "INJECT:ALLOWANCE_SC",
      "func": "pause",
      "gasLimit": 5000000,
      "inputs": [
        {
          "name": "Blockchain",
          "as": "chain",
          "bot": "The blockchain network.",
          "type": "string",
          "position": "chain",
          "source": "field",
          "required": true
        },
        {
          "name": "Allowance ID",
          "as": "allowance_id",
          "description": {
            "en": "The ID of the allowance to pause"
          },
          "type": "uint64",
          "position": "arg:1",
          "source": "field",
          "required": true
        }
      ]
    }
  ],
  "messages": {
    "success": {
      "en": "Allowance paused. Agent spending is frozen."
    }
  }
}
