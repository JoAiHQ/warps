{
  "protocol": "warp:3.0.0",
  "name": "Allowance: Spend & Call",
  "title": {
    "en": "Spend & Call Contract"
  },
  "description": {
    "en": "Spend tokens from an allowance to call a smart contract endpoint directly. Enables trustless DeFi interactions through the allowance."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Spend & Call"
      },
      "address": "INJECT:ALLOWANCE_SC",
      "func": "spendAndCall",
      "gasLimit": 30000000,
      "inputs": [
        {
          "name": "Blockchain",
          "as": "chain",
          "bot": "The blockchain network.",
          "type": "string",
          "position": "chain",
          "source": "field",
          "required": true
        },
        {
          "name": "Allowance ID",
          "as": "allowance_id",
          "description": {
            "en": "The ID of the allowance to spend from"
          },
          "type": "uint64",
          "position": "arg:1",
          "source": "field",
          "required": true
        },
        {
          "name": "Amount",
          "as": "amount",
          "description": {
            "en": "The amount to spend in the token's smallest unit"
          },
          "type": "biguint",
          "position": "arg:2",
          "source": "field",
          "required": true
        },
        {
          "name": "Contract Address",
          "as": "destination",
          "description": {
            "en": "The smart contract address to call"
          },
          "type": "address",
          "position": "arg:3",
          "source": "field",
          "required": true
        },
        {
          "name": "Endpoint",
          "as": "endpoint_name",
          "description": {
            "en": "The smart contract endpoint to call"
          },
          "type": "string",
          "position": "arg:4",
          "source": "field",
          "required": true
        },
        {
          "name": "Gas Limit",
          "as": "gas_limit",
          "description": {
            "en": "Gas limit for the contract call"
          },
          "type": "uint64",
          "position": "arg:5",
          "source": "field",
          "required": true,
          "default": "10000000"
        }
      ]
    }
  ],
  "messages": {
    "success": {
      "en": "Contract called successfully from allowance."
    }
  }
}
