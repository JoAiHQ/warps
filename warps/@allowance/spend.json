{
  "protocol": "warp:3.0.0",
  "name": "Allowance: Spend",
  "title": {
    "en": "Spend from Allowance"
  },
  "description": {
    "en": "Transfer tokens from an allowance to a destination address. Only the authorized agent can execute this."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Spend"
      },
      "address": "INJECT:ALLOWANCE_SC",
      "func": "spend",
      "gasLimit": 10000000,
      "inputs": [
        {
          "name": "Blockchain",
          "as": "chain",
          "bot": "The blockchain network.",
          "type": "string",
          "position": "chain",
          "source": "field",
          "required": true
        },
        {
          "name": "Allowance ID",
          "as": "allowance_id",
          "description": {
            "en": "The ID of the allowance to spend from"
          },
          "type": "uint64",
          "position": "arg:1",
          "source": "field",
          "required": true
        },
        {
          "name": "Amount",
          "as": "amount",
          "description": {
            "en": "The amount to spend in the token's smallest unit"
          },
          "type": "biguint",
          "position": "arg:2",
          "source": "field",
          "required": true
        },
        {
          "name": "Destination",
          "as": "destination",
          "description": {
            "en": "The address to send the tokens to"
          },
          "type": "address",
          "position": "arg:3",
          "source": "field",
          "required": true
        }
      ]
    }
  ],
  "messages": {
    "success": {
      "en": "Tokens sent successfully from allowance."
    }
  }
}
