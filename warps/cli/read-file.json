{
  "protocol": "warp:3.0.0",
  "name": "CLI: Read File",
  "title": {
    "en": "Read file contents",
    "de": "Dateiinhalt lesen"
  },
  "description": {
    "en": "Read and display the contents of a file.",
    "de": "Den Inhalt einer Datei lesen und anzeigen."
  },
  "actions": [
    {
      "type": "prompt",
      "label": {
        "en": "Read File",
        "de": "Datei lesen"
      },
      "prompt": "/cat {{FILE_PATH}}",
      "inputs": [
        {
          "name": "File Path",
          "as": "FILE_PATH",
          "description": {
            "en": "The path of the file to read",
            "de": "Der Pfad der zu lesenden Datei"
          },
          "type": "string",
          "source": "field",
          "required": true
        }
      ]
    }
  ]
}
