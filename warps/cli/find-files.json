{
  "protocol": "warp:3.0.0",
  "name": "CLI: Find Files",
  "title": {
    "en": "Find files by name",
    "de": "Dateien nach Name suchen"
  },
  "description": {
    "en": "Find files matching a name pattern.",
    "de": "Dateien finden, die einem Namensmuster entsprechen."
  },
  "actions": [
    {
      "type": "prompt",
      "label": {
        "en": "Find Files",
        "de": "Dateien suchen"
      },
      "prompt": "/find . -name \"{{PATTERN}}\"",
      "inputs": [
        {
          "name": "Pattern",
          "as": "PATTERN",
          "description": {
            "en": "The file name pattern to search for",
            "de": "Das Dateinamensmuster zum Suchen"
          },
          "type": "string",
          "source": "field",
          "required": true
        }
      ]
    }
  ]
}
