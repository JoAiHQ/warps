{
  "protocol": "warp:3.0.0",
  "name": "CLI: List Files",
  "title": {
    "en": "List files and directories",
    "de": "Dateien und Verzeichnisse auflisten"
  },
  "description": {
    "en": "List files and directories in a given path.",
    "de": "Dateien und Verzeichnisse in einem bestimmten Pfad auflisten."
  },
  "actions": [
    {
      "type": "prompt",
      "label": {
        "en": "List Files",
        "de": "Dateien auflisten"
      },
      "prompt": "/ls {{PATH}}",
      "inputs": [
        {
          "name": "Path",
          "as": "PATH",
          "description": {
            "en": "The directory path to list",
            "de": "Der Verzeichnispfad zum Auflisten"
          },
          "type": "string",
          "source": "field",
          "required": false
        }
      ]
    }
  ]
}
