{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "xExchange Devnet: Swap UTK to WEGLD",
  "title": {
    "en": "Swap UTK to WEGLD"
  },
  "description": {
    "en": "Swap UTK to WEGLD tokens on xExchange Devnet."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Swap to WEGLD"
      },
      "address": "erd1qqqqqqqqqqqqqpgq4zafu6rzdw7fj07hjh5tkm68jsaj7hl60n4s8py4ra",
      "func": "swapTokensFixedInput",
      "args": [
        "string:INJECT:TOKEN/WEGLD"
      ],
      "gasLimit": 25000000,
      "abi": "INJECT:xexchange/pair.abi.json",
      "inputs": [
        {
          "name": "UTK Asset",
          "as": "asset",
          "description": {
            "en": "UTK tokens to swap."
          },
          "type": "asset",
          "position": "transfer",
          "source": "field",
          "required": true,
          "options": [
            "INJECT:TOKEN/UTK"
          ]
        },
        {
          "name": "Minimum Amount Out",
          "description": {
            "en": "Minimum WEGLD to receive."
          },
          "type": "biguint",
          "position": "arg:2",
          "source": "field",
          "default": "1",
          "min": 1
        }
      ],
      "output": {
        "OUT": "out.1",
        "AMOUNT_OUT": "out.1.amount"
      }
    }
  ],
  "messages": {
    "success": {
      "en": "Swap completed. Received {{AMOUNT_OUT}} WEGLD"
    }
  }
}
