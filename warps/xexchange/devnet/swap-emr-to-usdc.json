{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "xExchange Devnet: Swap EMR to USDC",
  "title": {
    "en": "Swap EMR to USDC"
  },
  "description": {
    "en": "Swap EMR to USDC tokens on xExchange Devnet."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Swap to USDC"
      },
      "address": "erd1qqqqqqqqqqqqqpgqhlnuj8dpru7zs4mm49pudr2uk53w74px0n4snd2495",
      "func": "swapTokensFixedInput",
      "args": [
        "string:INJECT:TOKEN/USDC"
      ],
      "gasLimit": 25000000,
      "abi": "INJECT:xexchange/pair.abi.json",
      "inputs": [
        {
          "name": "EMR Asset",
          "as": "asset",
          "description": {
            "en": "EMR tokens to swap."
          },
          "type": "asset",
          "position": "transfer",
          "source": "field",
          "required": true,
          "options": [
            "INJECT:TOKEN/EMR"
          ]
        },
        {
          "name": "Minimum Amount Out",
          "description": {
            "en": "Minimum USDC to receive."
          },
          "type": "biguint",
          "position": "arg:2",
          "source": "field",
          "default": "1",
          "min": 1
        }
      ],
      "output": {
        "OUT": "out.1",
        "AMOUNT_OUT": "out.1.amount"
      }
    }
  ],
  "messages": {
    "success": {
      "en": "Swap completed. Received {{AMOUNT_OUT}} USDC"
    }
  },
  "defaultChain": "multiversx"
}
