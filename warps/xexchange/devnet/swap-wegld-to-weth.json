{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "xExchange Devnet: Swap WEGLD to WETH",
  "title": {
    "en": "Swap WEGLD to WETH"
  },
  "description": {
    "en": "Swap WEGLD to WETH tokens on xExchange Devnet."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Swap to WETH"
      },
      "address": "erd1qqqqqqqqqqqqqpgqph6g8569lnvpgd3x569hd6n6qse2aw0w0n4sms6nzv",
      "func": "swapTokensFixedInput",
      "args": [
        "string:INJECT:TOKEN/WETH"
      ],
      "gasLimit": 25000000,
      "abi": "INJECT:xexchange/pair.abi.json",
      "inputs": [
        {
          "name": "WEGLD Asset",
          "as": "asset",
          "description": {
            "en": "WEGLD tokens to swap."
          },
          "type": "asset",
          "position": "transfer",
          "source": "field",
          "required": true,
          "options": [
            "INJECT:TOKEN/WEGLD"
          ]
        },
        {
          "name": "Minimum Amount Out",
          "description": {
            "en": "Minimum WETH to receive."
          },
          "type": "biguint",
          "position": "arg:2",
          "source": "field",
          "default": "1",
          "min": 1
        }
      ],
      "output": {
        "OUT": "out.1",
        "AMOUNT_OUT": "out.1.amount"
      }
    }
  ],
  "messages": {
    "success": {
      "en": "Swap completed. Received {{AMOUNT_OUT}} WETH"
    }
  },
  "defaultChain": "multiversx"
}
