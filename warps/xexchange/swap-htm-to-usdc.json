{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "xExchange Devnet: Swap HTM to USDC",
  "title": {
    "en": "Swap HTM to USDC"
  },
  "description": {
    "en": "Swap HTM to USDC tokens on xExchange Devnet."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Swap to USDC"
      },
      "address": "erd1qqqqqqqqqqqqqpgqmj807dvlfh0tvmgf5ztx0t79xn8nfct60n4sw0d6vy",
      "func": "swapTokensFixedInput",
      "args": [
        "string:INJECT:TOKEN/USDC"
      ],
      "gasLimit": 25000000,
      "abi": "INJECT:abis/pair.abi.json",
      "inputs": [
        {
          "name": "HTM Asset",
          "as": "asset",
          "description": {
            "en": "HTM tokens to swap."
          },
          "type": "asset",
          "position": "transfer",
          "source": "field",
          "required": true,
          "options": [
            "INJECT:TOKEN/HTM"
          ]
        },
        {
          "name": "Minimum Amount Out",
          "description": {
            "en": "Minimum USDC to receive."
          },
          "type": "biguint",
          "position": "arg:2",
          "source": "field",
          "default": "1",
          "min": 1
        }
      ],
      "output": {
        "OUT": "out.1",
        "AMOUNT_OUT": "out.1.amount"
      }
    }
  ],
  "messages": {
    "success": {
      "en": "Swap completed. Received {{AMOUNT_OUT}} USDC"
    }
  }
}