{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "xExchange Devnet: Swap WEGLD to UTK",
  "title": {
    "en": "Swap WEGLD to UTK",
    "de": "WEGLD gegen UTK tauschen"
  },
  "description": {
    "en": "Swap WEGLD to UTK tokens on xExchange Devnet.",
    "de": "WEGLD gegen UTK Token auf xExchange Devnet tauschen."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Swap to UTK",
        "de": "Gegen UTK tauschen"
      },
      "address": "erd1qqqqqqqqqqqqqpgq4zafu6rzdw7fj07hjh5tkm68jsaj7hl60n4s8py4ra",
      "func": "swapTokensFixedInput",
      "args": [
        "string:INJECT:TOKEN/UTK"
      ],
      "gasLimit": 25000000,
      "abi": "INJECT:abis/pair.abi.json",
      "inputs": [
        {
          "name": "WEGLD Asset",
          "as": "asset",
          "description": {
            "en": "WEGLD tokens to swap.",
            "de": "WEGLD Token zum Tauschen."
          },
          "type": "asset",
          "position": "transfer",
          "source": "field",
          "required": true,
          "options": [
            "INJECT:TOKEN/WEGLD"
          ]
        },
        {
          "name": "Minimum Amount Out",
          "description": {
            "en": "Minimum UTK to receive.",
            "de": "Minimales UTK zum Erhalten."
          },
          "type": "biguint",
          "position": "arg:2",
          "source": "field",
          "default": "1",
          "min": 1
        }
      ]
    }
  ],
  "messages": {
    "success": {
      "en": "Swap completed. Received {{AMOUNT_OUT}} UTK",
      "de": "Tausch abgeschlossen. Erhalten {{AMOUNT_OUT}} UTK"
    }
  },
  "output": {
    "OUT": "out.1",
    "AMOUNT_OUT": "out.1.amount"
  }
}