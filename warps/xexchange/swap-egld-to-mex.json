{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "xExchange: Swap WEGLD to MEX",
  "title": {
    "en": "Swap WEGLD to MEX",
    "de": "Tausche WEGLD zu MEX"
  },
  "description": {
    "en": "Swap WEGLD to MEX tokens on xExchange. Exchange WEGLD for MEX in the EGLD/MEX liquidity pair with slippage protection.",
    "de": "Tausche WEGLD zu MEX Token auf xExchange. Tausche WEGLD gegen MEX im EGLD/MEX Liquidit√§tspaar mit Slippage-Schutz."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Swap to MEX",
        "de": "Zu MEX tauschen"
      },
      "address": "INJECT:CONTRACT/PAIR/EGLD_MEX",
      "func": "swapTokensFixedInput",
      "args": [
        "string:INJECT:TOKEN/MEX"
      ],
      "gasLimit": 25000000,
      "abi": "INJECT:xexchange/pair.abi.json",
      "inputs": [
        {
          "name": "EGLD Asset",
          "as": "asset",
          "description": {
            "en": "WEGLD tokens to swap to MEX.",
            "de": "WEGLD Token zum Tauschen zu MEX."
          },
          "type": "asset",
          "position": "transfer",
          "source": "field",
          "required": true,
          "options": [
            "INJECT:TOKEN/WEGLD"
          ]
        },
        {
          "name": "Minimum Amount Out",
          "description": {
            "en": "Minimum amount of MEX tokens to receive (slippage protection).",
            "de": "Mindestbetrag an MEX Token zum Erhalten (Slippage-Schutz)."
          },
          "type": "biguint",
          "position": "arg:2",
          "source": "field",
          "default": "1",
          "min": 1
        }
      ]
    }
  ],
  "output": {
    "OUT": "out.1",
    "AMOUNT_OUT": "out.1.amount"
  },
  "messages": {
    "success": {
      "en": "Swap completed successfully. Received {{AMOUNT_OUT}} MEX",
      "de": "Tausch erfolgreich abgeschlossen. {{AMOUNT_OUT}} MEX erhalten"
    }
  }
}
