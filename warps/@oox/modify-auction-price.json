{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "OOX: Modify Auction Price",
  "title": "Modify Auction Price",
  "description": "Update the minimum and/or maximum bid price for your active auction.",
  "actions": [
    {
      "type": "contract",
      "label": "Modify price",
      "address": "INJECT:MARKETPLACE",
      "func": "modifyAuctionPrice",
      "args": [],
      "gasLimit": 10000000,
      "abi": "INJECT:abis/marketplace.abi.json",
      "inputs": [
        {
          "name": "Auction ID",
          "description": "The ID of the auction to modify.",
          "type": "number",
          "position": "arg:1",
          "source": "field",
          "required": true,
          "min": 0
        },
        {
          "name": "New Min Bid",
          "description": "New minimum bid amount.",
          "type": "biguint",
          "position": "arg:2",
          "source": "field",
          "required": true,
          "min": 1
        },
        {
          "name": "New Max Bid",
          "description": "New maximum bid amount (optional, leave empty to keep current).",
          "type": "biguint",
          "position": "arg:3",
          "source": "field",
          "required": false,
          "min": 1
        }
      ]
    }
  ],
  "messages": {
    "success": "Auction price modified successfully"
  }
}