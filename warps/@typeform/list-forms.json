{
  "protocol": "warp:3.0.0",
  "name": "Typeform: List Forms",
  "title": {
    "en": "List forms",
    "de": "Formulare auflisten"
  },
  "description": {
    "en": "List your Typeform forms.",
    "de": "Liste deine Typeform-Formulare auf."
  },
  "vars": {
    "ACCESS_TOKEN": "env:TYPEFORM_ACCESS_TOKEN|Your Typeform Personal Access Token."
  },
  "actions": [
    {
      "type": "collect",
      "label": "List Forms",
      "destination": {
        "url": "https://api.typeform.com/forms",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer {{ACCESS_TOKEN}}"
        }
      },
      "inputs": [
        {
          "name": "Page",
          "as": "page",
          "description": {
            "en": "Page number."
          },
          "type": "number",
          "source": "field",
          "required": false,
          "position": "query:page",
          "default": 1
        },
        {
          "name": "Page Size",
          "as": "page_size",
          "description": {
            "en": "Number of forms per page."
          },
          "type": "number",
          "source": "field",
          "required": false,
          "position": "query:page_size",
          "default": 10
        }
      ]
    }
  ],
  "output": {
    "FORMS": "out.items",
    "COUNT": "out.total_items"
  },
  "messages": {
    "success": {
      "en": "Found {{COUNT}} form(s).",
      "de": "{{COUNT}} Formular(e) gefunden."
    }
  }
}
