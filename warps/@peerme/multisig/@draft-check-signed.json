{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "PeerMe MultiSig: Check Signed",
  "title": "Check if user signed proposal",
  "description": "Check if a specific user has signed a MultiSig proposal. This does not verify if the user is still a valid board member, only if they signed the proposal.",
  "vars": {
    "MULTISIG_ADDRESS": "query:multisig"
  },
  "actions": [
    {
      "type": "query",
      "label": "Check signature",
      "address": "{{MULTISIG_ADDRESS}}",
      "func": "signed",
      "args": [],
      "abi": "INJECT:peerme/multisig.abi.json"
    }
  ],
  "inputs": [
    {
      "name": "User Address",
      "as": "USER_ADDRESS",
      "description": "The wallet address to check.",
      "type": "address",
      "position": "arg:1",
      "source": "field",
      "required": true
    },
    {
      "name": "Action ID",
      "as": "ACTION_ID",
      "description": "The ID of the proposal to check.",
      "type": "number",
      "position": "arg:2",
      "source": "field",
      "required": true
    }
  ],
  "output": {
    "SIGNED": "out",
    "HAS_SIGNED": "transform:() => results.SIGNED === true || results.SIGNED === 1 || results.SIGNED === '1'",
    "STATUS": "transform:() => results.HAS_SIGNED ? 'Signed' : 'Not signed'"
  },
  "messages": {
    "success": "User {{USER_ADDRESS}} has {{STATUS}} proposal {{ACTION_ID}}.",
    "card": "Signature Status: {{STATUS}}",
    "info": "This user has {{STATUS.toLowerCase()}} proposal #{{ACTION_ID}}"
  },
}
