{
  "protocol": "warp:3.0.0",
  "chain": "arbitrum",
  "name": "OmniSet: Deposit Arbitrum",
  "title": "Deposit assets on Arbitrum to OmniSet",
  "description": "Deposit a blockchain asset from Arbitrum to OmniSet.",
  "vars": {
    "BRIDGE": "INJECT:DEPOSIT_ARBITRUM"
  },
  "actions": [
    {
      "type": "contract",
      "label": "Approve now",
      "address": "{{primary.asset.token}}",
      "func": "approve",
      "args": [
        "address:{{BRIDGE}}",
        "uint256:{{primary.asset.amount}}"
      ],
      "gasLimit": 200000,
      "abi": "function approve(address spender, uint256 amount) public returns (bool)",
      "when": "{{primary.asset.token}} !== '0x0000000000000000000000000000000000000000'"
    },
    {
      "type": "contract",
      "label": "Deposit now",
      "address": "{{BRIDGE}}",
      "func": "deposit",
      "args": [],
      "gasLimit": 200000,
      "abi": "function deposit(address token, uint256 amount, string calldata receiver) public payable",
      "primary": true,
      "inputs": [
        {
          "name": "Asset",
          "as": "asset",
          "description": "The asset to deposit.",
          "type": "asset",
          "position": {
            "token": "arg:1",
            "amount": "arg:2"
          },
          "source": "field",
          "required": true,
          "modifier": "transform:(inputs) => inputs.asset?.identifier === 'ETH' ? {identifier: '0x0000000000000000000000000000000000000000', amount: inputs.asset.amount} : inputs.asset"
        },
        {
          "name": "Receiver",
          "description": "The blockchain wallet address of the receiver.",
          "type": "string",
          "position": "arg:3",
          "source": "hidden",
          "default": "{{USER_WALLET_PUBLICKEY:fastset}}"
        }
      ]
    },
    {
      "type": "link",
      "label": "Learn more about FastSet",
      "url": "https://pi2.network"
    }
  ],
  "messages": {
    "success": "Assets deposited successfully"
  },
  "defaultChain": "arbitrum"
}
