{
  "protocol": "warp:3.0.0",
  "name": "Notion: Create Page",
  "title": {
    "en": "Create a page",
    "de": "Eine Seite erstellen"
  },
  "description": {
    "en": "Create a new page in a Notion database or as a child of another page.",
    "de": "Erstelle eine neue Seite in einer Notion-Datenbank oder als Kind einer anderen Seite."
  },
  "vars": {
    "API_KEY": "env:NOTION_API_KEY|Get your API key from Notion Integrations at https://www.notion.so/my-integrations"
  },
  "actions": [
    {
      "type": "collect",
      "label": {
        "en": "Create Page",
        "de": "Seite erstellen"
      },
      "destination": {
        "url": "https://api.notion.com/v1/pages",
        "method": "POST",
        "headers": {
          "Authorization": "Bearer {{API_KEY}}",
          "Content-Type": "application/json",
          "Notion-Version": "2022-06-28"
        }
      },
      "inputs": [
        {
          "name": "Parent Database ID",
          "as": "databaseId",
          "description": {
            "en": "The ID of the parent database. Provide either this OR Parent Page ID."
          },
          "type": "string",
          "source": "field",
          "required": false,
          "position": "payload:parent.database_id"
        },
        {
          "name": "Parent Page ID",
          "as": "pageId",
          "description": {
            "en": "The ID of the parent page. Provide either this OR Parent Database ID."
          },
          "type": "string",
          "source": "field",
          "required": false,
          "position": "payload:parent.page_id"
        },
        {
          "name": "Title",
          "as": "title",
          "description": {
            "en": "The title of the new page."
          },
          "type": "string",
          "source": "field",
          "required": true,
          "position": "payload:properties.title.title.0.text.content"
        }
      ]
    }
  ],
  "output": {
    "PAGE_ID": "out.id",
    "URL": "out.url"
  },
  "messages": {
    "success": {
      "en": "Page created successfully! View it at {{URL}}",
      "de": "Seite erfolgreich erstellt! Ansehen unter {{URL}}"
    }
  }
}
