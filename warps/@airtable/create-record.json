{
  "protocol": "warp:3.0.0",
  "name": "Airtable: Create Record",
  "title": {
    "en": "Create record",
    "de": "Datensatz erstellen"
  },
  "description": {
    "en": "Create a new record in an Airtable table.",
    "de": "Erstelle einen neuen Datensatz in einer Airtable-Tabelle."
  },
  "vars": {
    "API_KEY": "env:AIRTABLE_API_KEY|Your Airtable Personal Access Token."
  },
  "actions": [
    {
      "type": "collect",
      "label": "Create Record",
      "destination": {
        "url": "https://api.airtable.com/v0/{{BASE_ID}}/{{TABLE_ID}}",
        "method": "POST",
        "headers": {
          "Authorization": "Bearer {{API_KEY}}",
          "Content-Type": "application/json"
        }
      },
      "inputs": [
        {
          "name": "Base ID",
          "as": "BASE_ID",
          "description": "The ID of the base.",
          "type": "string",
          "source": "field",
          "required": true,
          "position": "url:BASE_ID"
        },
        {
          "name": "Table ID",
          "as": "TABLE_ID",
          "description": "The ID or name of the table.",
          "type": "string",
          "source": "field",
          "required": true,
          "position": "url:TABLE_ID"
        },
        {
          "name": "Fields",
          "as": "fields",
          "description": "JSON object of fields and values.",
          "bot": "JSON object representing the record fields: {\"Name\": \"John\", \"Status\": \"Done\"}",
          "type": "string",
          "source": "field",
          "required": true,
          "position": "payload:fields"
        }
      ]
    }
  ],
  "output": {
    "RECORD_ID": "out.id",
    "CREATED_TIME": "out.createdTime"
  },
  "messages": {
    "success": {
      "en": "Record created! ID: {{RECORD_ID}}",
      "de": "Datensatz erstellt! ID: {{RECORD_ID}}"
    }
  }
}
