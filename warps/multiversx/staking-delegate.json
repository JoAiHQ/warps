{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "MultiversX: Staking - Delegate",
  "title": "Stake your MultiversX eGold",
  "description": "Stake your MultiversX eGold (EGLD) to secure the network and earn daily rewards.",
  "actions": [
    {
      "type": "contract",
      "label": "Stake now",
      "address": "{{PROVIDER_ADDRESS}}",
      "func": "delegate",
      "args": [],
      "gasLimit": 10000000,
      "inputs": [
        {
          "name": "Provider",
          "as": "provider",
          "description": "The address of the provider to delegate to.",
          "type": "address",
          "position": "receiver",
          "source": "field",
          "required": true
        },
        {
          "name": "value",
          "description": "Amount of eGold to delegate.",
          "type": "biguint",
          "position": "value",
          "source": "field",
          "required": true,
          "min": 1,
          "modifier": "scale:18"
        }
      ]
    },
    {
      "type": "link",
      "label": "Learn more",
      "description": "Find more information about staking eGold.",
      "url": "https://multiversx.com/egld"
    }
  ],
  "messages": {
    "success": "eGold staked successfully"
  },
  "related": [
    "@multiversx:multiversx-staking-claimable-rewards"
  ],
  "defaultChain": "multiversx"
}
