{
  "protocol": "warp:3.0.0",
  "name": "JoAi: Create Contact",
  "title": {
    "en": "Add a contact",
    "de": "Kontakt hinzufügen"
  },
  "description": {
    "en": "Save a new contact to your address book.",
    "de": "Einen neuen Kontakt in deinem Adressbuch speichern."
  },
  "bot": "Help the user add a contact. Extract whatever info is available — at minimum a name. Don't force the user to provide all fields.",
  "actions": [
    {
      "type": "collect",
      "label": {
        "en": "Add contact",
        "de": "Kontakt hinzufügen"
      },
      "inputs": [
        {
          "name": "Name",
          "as": "name",
          "description": {
            "en": "The contact's name",
            "de": "Der Name des Kontakts"
          },
          "bot": "The contact's name — first name, full name, or nickname.",
          "type": "string",
          "position": "arg:1",
          "source": "field",
          "required": true,
          "min": 1
        },
        {
          "name": "Email",
          "as": "email",
          "description": {
            "en": "Email address",
            "de": "E-Mail-Adresse"
          },
          "bot": "The contact's email address, if mentioned.",
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Phone",
          "as": "phone",
          "description": {
            "en": "Phone number",
            "de": "Telefonnummer"
          },
          "bot": "The contact's phone number, if mentioned.",
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Wallet Address",
          "as": "walletAddress",
          "description": {
            "en": "Blockchain wallet address",
            "de": "Blockchain-Wallet-Adresse"
          },
          "bot": "The contact's blockchain wallet address, if provided.",
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Chain",
          "as": "chain",
          "description": {
            "en": "Blockchain network for the wallet",
            "de": "Blockchain-Netzwerk für das Wallet"
          },
          "bot": "The blockchain network. Default to 'multiversx' unless specified otherwise.",
          "type": "string",
          "source": "field",
          "required": false,
          "default": "multiversx"
        },
        {
          "name": "Company",
          "as": "company",
          "description": {
            "en": "Company or organization",
            "de": "Unternehmen oder Organisation"
          },
          "bot": "The contact's company or organization, if mentioned.",
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Title",
          "as": "title",
          "description": {
            "en": "Job title or role",
            "de": "Jobtitel oder Rolle"
          },
          "bot": "The contact's job title or role (e.g., CEO, Developer), if mentioned.",
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Notes",
          "as": "notes",
          "description": {
            "en": "Any additional notes",
            "de": "Zusätzliche Notizen"
          },
          "bot": "Any extra context or notes about this contact.",
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Tags",
          "as": "tags",
          "description": {
            "en": "Tags for categorization",
            "de": "Tags zur Kategorisierung"
          },
          "bot": "Tags to categorize this contact (e.g., client, investor, partner). Provide as a comma-separated list.",
          "type": "string",
          "source": "field",
          "required": false
        }
      ]
    }
  ],
  "messages": {
    "success": {
      "en": "Contact '{{name}}' added!",
      "de": "Kontakt '{{name}}' hinzugefügt!"
    }
  }
}
