{
  "protocol": "warp:3.0.0",
  "name": "JoAi: Update Contact",
  "title": {
    "en": "Update a contact",
    "de": "Kontakt aktualisieren"
  },
  "description": {
    "en": "Update an existing contact's information.",
    "de": "Informationen eines bestehenden Kontakts aktualisieren."
  },
  "bot": "Help the user update a contact's details. Ask which contact to update and what fields to change.",
  "actions": [
    {
      "type": "collect",
      "label": {
        "en": "Update contact",
        "de": "Kontakt aktualisieren"
      },
      "inputs": [
        {
          "name": "Contact Name",
          "as": "contactName",
          "description": {
            "en": "The name of the contact to update",
            "de": "Der Name des zu aktualisierenden Kontakts"
          },
          "bot": "The current name of the contact to update. Must match an existing contact.",
          "type": "string",
          "position": "arg:1",
          "source": "field",
          "required": true,
          "min": 1
        },
        {
          "name": "New Name",
          "as": "name",
          "description": {
            "en": "New name for the contact",
            "de": "Neuer Name f√ºr den Kontakt"
          },
          "bot": "A new name for this contact, if they want to rename it.",
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Email",
          "as": "email",
          "description": {
            "en": "Email address",
            "de": "E-Mail-Adresse"
          },
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Phone",
          "as": "phone",
          "description": {
            "en": "Phone number",
            "de": "Telefonnummer"
          },
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Wallet Address",
          "as": "walletAddress",
          "description": {
            "en": "Blockchain wallet address",
            "de": "Blockchain-Wallet-Adresse"
          },
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Chain",
          "as": "chain",
          "description": {
            "en": "Blockchain network",
            "de": "Blockchain-Netzwerk"
          },
          "type": "string",
          "source": "field",
          "required": false,
          "default": "multiversx"
        },
        {
          "name": "Company",
          "as": "company",
          "description": {
            "en": "Company or organization",
            "de": "Unternehmen oder Organisation"
          },
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Title",
          "as": "title",
          "description": {
            "en": "Job title or role",
            "de": "Jobtitel oder Rolle"
          },
          "type": "string",
          "source": "field",
          "required": false
        },
        {
          "name": "Tags",
          "as": "tags",
          "description": {
            "en": "Tags for categorization",
            "de": "Tags zur Kategorisierung"
          },
          "type": "string",
          "source": "field",
          "required": false
        }
      ]
    }
  ],
  "messages": {
    "success": {
      "en": "Contact '{{contactName}}' updated!",
      "de": "Kontakt '{{contactName}}' aktualisiert!"
    }
  }
}
