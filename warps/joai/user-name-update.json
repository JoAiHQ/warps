{
  "protocol": "warp:3.0.0",
  "name": "JoAi: User Name Update",
  "title": {
    "en": "Update your name",
    "de": "Aktualisiere deinen Namen"
  },
  "description": {
    "en": "Update the name on your profile.",
    "de": "Aktualisiere den Namen in deinem Profil."
  },
  "actions": [
    {
      "type": "collect",
      "label": {
        "en": "Update now",
        "de": "Jetzt aktualisieren"
      },
      "inputs": [
        {
          "name": "User Name",
          "as": "userName",
          "description": {
            "en": "The user's personal name",
            "de": "Der pers√∂nliche Name des Benutzers"
          },
          "bot": "For identification purposes.",
          "type": "string",
          "position": "arg:1",
          "source": "field",
          "required": true,
          "min": 3
        }
      ]
    }
  ],
  "output": {
    "USER_NAME": "in.userName"
  },
  "messages": {
    "success": {
      "en": "I have updated your name to {{USER_NAME}}.",
      "de": "Ich habe deinen Namen auf {{USER_NAME}} aktualisiert."
    }
  },
  "defaultChain": "multiversx"
}
