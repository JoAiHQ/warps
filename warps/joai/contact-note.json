{
  "protocol": "warp:3.0.0",
  "name": "JoAi: Add Contact Note",
  "title": {
    "en": "Add a note to a contact",
    "de": "Notiz zu einem Kontakt hinzufügen"
  },
  "description": {
    "en": "Append a note to a contact's record.",
    "de": "Eine Notiz zum Kontaktdatensatz hinzufügen."
  },
  "bot": "Jot down context about a contact as you learn it from conversations. Use this passively — no need to ask the user for permission to take notes.",
  "actions": [
    {
      "type": "collect",
      "label": {
        "en": "Add note",
        "de": "Notiz hinzufügen"
      },
      "inputs": [
        {
          "name": "Contact Name",
          "as": "contactName",
          "description": {
            "en": "The name of the contact",
            "de": "Der Name des Kontakts"
          },
          "bot": "The name of the contact to add the note to.",
          "type": "string",
          "position": "arg:1",
          "source": "field",
          "required": true,
          "min": 1
        },
        {
          "name": "Note",
          "as": "note",
          "description": {
            "en": "The note to add",
            "de": "Die hinzuzufügende Notiz"
          },
          "bot": "The note content — a brief piece of context learned about this contact.",
          "type": "string",
          "position": "arg:2",
          "source": "field",
          "required": true,
          "min": 1
        }
      ]
    }
  ],
  "messages": {
    "success": {
      "en": "Note added to '{{contactName}}'.",
      "de": "Notiz zu '{{contactName}}' hinzugefügt."
    }
  }
}
