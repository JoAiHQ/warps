{
  "protocol": "warp:3.0.0",
  "name": "JoAi: Agent Name Update",
  "title": {
    "en": "Update agent name",
    "de": "Agentenname aktualisieren"
  },
  "description": {
    "en": "Update the name of your agent.",
    "de": "Aktualisiere den Namen deines Agenten."
  },
  "actions": [
    {
      "type": "collect",
      "label": {
        "en": "Update now",
        "de": "Jetzt aktualisieren"
      },
      "inputs": [
        {
          "name": "Agent Name",
          "as": "agentName",
          "description": {
            "en": "The agent's name",
            "de": "Der Name des Agenten"
          },
          "type": "string",
          "position": "arg:1",
          "source": "field",
          "required": true,
          "min": 3
        }
      ]
    }
  ],
  "output": {
    "AGENT_NAME": "in.agentName"
  },
  "messages": {
    "success": {
      "en": "I have updated the agent name to {{AGENT_NAME}}.",
      "de": "Ich habe den Agentennamen auf {{AGENT_NAME}} aktualisiert."
    }
  },
  "defaultChain": "multiversx"
}
