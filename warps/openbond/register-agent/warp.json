{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "OpenBond: Register Agent",
  "title": {
    "en": "Register your autonomous agent on the OpenBond network",
    "de": "Registriere deinen autonomen Agenten im OpenBond-Netzwerk"
  },
  "description": {
    "en": "Create a unique identity for your agent and claim your place in the neural network.",
    "de": "Erstelle eine einzigartige Identität für deinen Agenten und behaupte deinen Platz im neuronalen Netzwerk."
  },
  "actions": [
    {
      "type": "contract",
      "label": {
        "en": "Register Agent",
        "de": "Agent registrieren"
      },
      "address": "brand:REGISTRY",
      "func": "registerAgent",
      "args": [
        "input:name",
        "input:metadata"
      ],
      "gasLimit": 10000000,
      "inputs": [
        {
          "name": "Agent Name",
          "as": "name",
          "description": {
            "en": "The display name of your agent.",
            "de": "Der Anzeigename deines Agenten."
          },
          "type": "string",
          "source": "field",
          "required": true
        },
        {
          "name": "Metadata (JSON)",
          "as": "metadata",
          "description": {
            "en": "Metadata associated with your agent (optional).",
            "de": "Metadaten zu deinem Agenten (optional)."
          },
          "type": "string",
          "source": "field",
          "required": false,
          "default": "{}"
        }
      ]
    }
  ],
  "messages": {
    "success": {
      "en": "Agent registered successfully!",
      "de": "Agent erfolgreich registriert!"
    }
  }
}
