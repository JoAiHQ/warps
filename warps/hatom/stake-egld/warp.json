{
  "protocol": "warp:3.0.0",
  "chain": "multiversx",
  "name": "Hatom: Stake eGold",
  "title": { "en": "Stake eGold with Hatom", "de": "eGold bei Hatom staken" },
  "description": { "en": "Stake eGold to secure the network and earn rewards.", "de": "Stake eGold, um das Netzwerk zu sichern und Belohnungen zu verdienen." },
  "actions": [
    {
      "type": "contract",
      "label": { "en": "Stake now", "de": "Jetzt staken" },
      "address": "INJECT:PROVIDER",
      "func": "delegate",
      "args": [],
      "gasLimit": 10000000,
      "inputs": [
        {
          "name": "value",
          "description": { "en": "Amount of eGold to delegate.", "de": "Betrag an eGold zum Delegieren." },
          "type": "biguint",
          "position": "value",
          "source": "field",
          "required": true,
          "min": 1,
          "modifier": "scale:18"
        }
      ]
    },
    {
      "type": "link",
      "label": { "en": "Learn more", "de": "Mehr erfahren" },
      "description": { "en": "Find more information about staking eGold.", "de": "Weitere Informationen zum Staking von eGold finden." },
      "url": "https://multiversx.com/egld"
    }
  ],
  "output": {
    "TX_HASH": "out",
    "AMOUNT_EGLD": "transform:() => Number(input:value) / 10 ** 18"
  },
  "ui": "https://raw.githubusercontent.com/JoAiHQ/warps/main/warps/hatom/stake-egld/chatapp.dist.html",
  "messages": {
    "success": { "en": "eGold staked successfully", "de": "eGold erfolgreich gestaked" }
  },
  "related": [
    "@multiversx:multiversx-staking-claimable-rewards",
    "@multiversx:multiversx-staking-redelegate-all"
  ]
}
