{
  "protocol": "warp:3.0.0",
  "chain": "polygon",
  "name": "Polymarket: Get Position ID",
  "title": {
    "en": "Get Position ID",
    "de": "Positions-ID abrufen"
  },
  "description": {
    "en": "Calculate the position ID from collateral token address and collection ID using the Conditional Token Framework.",
    "de": "Berechne die Positions-ID aus Collateral-Token-Adresse und Collection-ID Ã¼ber das Conditional Token Framework."
  },
  "actions": [
    {
      "type": "query",
      "label": {
        "en": "Get Position ID",
        "de": "Positions-ID abrufen"
      },
      "address": "INJECT:CONTRACT/CTF",
      "func": "getPositionId",
      "args": [],
      "abi": "function getPositionId(address collateralToken, bytes32 collectionId) external pure returns (uint256)",
      "inputs": [
        {
          "name": "Collateral Token",
          "as": "collateralToken",
          "description": {
            "en": "The collateral token address (usually USDC).",
            "de": "Die Collateral-Token-Adresse (normalerweise USDC)."
          },
          "type": "address",
          "position": "arg:1",
          "source": "field",
          "required": true,
          "default": "INJECT:TOKEN/USDC"
        },
        {
          "name": "Collection ID",
          "as": "collectionId",
          "description": {
            "en": "The collection ID (bytes32 hex string).",
            "de": "Die Collection-ID (bytes32 Hex-String)."
          },
          "type": "hex",
          "position": "arg:2",
          "source": "field",
          "required": true
        }
      ]
    }
  ],
  "output": {
    "POSITION_ID": "out"
  },
  "messages": {
    "success": {
      "en": "Position ID: {{POSITION_ID}}",
      "de": "Positions-ID: {{POSITION_ID}}"
    }
  },
  "defaultChain": "polygon"
}
