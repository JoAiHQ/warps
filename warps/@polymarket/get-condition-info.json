{
  "protocol": "warp:3.0.0",
  "chain": "polygon",
  "name": "Polymarket: Get Condition Info",
  "title": {
    "en": "Get Market Condition Information",
    "de": "Marktbedingungsinformationen abrufen"
  },
  "description": {
    "en": "Retrieve information about a prediction market condition including outcome slot count and condition details from the Conditional Token Framework.",
    "de": "Rufe Informationen über eine Prognosemarktbedingung ab, einschließlich Ergebnis-Slot-Anzahl und Bedingungsdetails vom Conditional Token Framework."
  },
  "actions": [
    {
      "type": "query",
      "label": {
        "en": "Get Outcome Slot Count",
        "de": "Ergebnis-Slot-Anzahl abrufen"
      },
      "address": "INJECT:CONTRACT/CTF",
      "func": "getOutcomeSlotCount",
      "args": [],
      "abi": "function getOutcomeSlotCount(bytes32 conditionId) external view returns (uint256)",
      "inputs": [
        {
          "name": "Condition ID",
          "as": "conditionId",
          "description": {
            "en": "The condition ID (bytes32 hex string) of the market.",
            "de": "Die Condition-ID (bytes32 Hex-String) des Marktes."
          },
          "type": "hex",
          "position": "arg:1",
          "source": "field",
          "required": true
        }
      ]
    },
    {
      "type": "query",
      "label": {
        "en": "Get Condition",
        "de": "Bedingung abrufen"
      },
      "address": "INJECT:CONTRACT/CTF",
      "func": "getCondition",
      "args": [],
      "abi": "function getCondition(bytes32 conditionId) external view returns (address oracle, bytes32 questionId, uint256 outcomeSlotCount)",
      "inputs": [
        {
          "name": "Condition ID",
          "as": "conditionId",
          "description": {
            "en": "The condition ID (bytes32 hex string) of the market.",
            "de": "Die Condition-ID (bytes32 Hex-String) des Marktes."
          },
          "type": "hex",
          "position": "arg:1",
          "source": "field",
          "required": true
        }
      ]
    }
  ],
  "output": {
    "OUTCOME_SLOT_COUNT": "out[0]",
    "ORACLE": "out[1].oracle",
    "QUESTION_ID": "out[1].questionId",
    "OUTCOME_SLOT_COUNT_FROM_CONDITION": "out[1].outcomeSlotCount"
  },
  "messages": {
    "success": {
      "en": "Condition info retrieved. Outcome slots: {{OUTCOME_SLOT_COUNT}}",
      "de": "Bedingungsinformationen abgerufen. Ergebnis-Slots: {{OUTCOME_SLOT_COUNT}}"
    }
  },
  "defaultChain": "polygon"
}
