{
  "protocol": "warp:3.0.0",
  "name": "Microsoft To Do: List Lists",
  "title": {
    "en": "List To Do lists",
    "de": "To Do-Listen auflisten"
  },
  "description": {
    "en": "List your Microsoft To Do task lists.",
    "de": "Liste deine Microsoft To Do-Aufgabenlisten auf."
  },
  "vars": {
    "ACCESS_TOKEN": "env:MICROSOFT_ACCESS_TOKEN|Your Microsoft Graph Access Token."
  },
  "actions": [
    {
      "type": "collect",
      "label": "List Lists",
      "destination": {
        "url": "https://graph.microsoft.com/v1.0/me/todo/lists",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer {{ACCESS_TOKEN}}"
        }
      },
      "inputs": []
    }
  ],
  "output": {
    "LISTS": "out.value"
  },
  "messages": {
    "success": {
      "en": "Retrieved task lists.",
      "de": "Aufgabenlisten abgerufen."
    }
  }
}
